<div class="list-container">
  <a href="/lists/new"><button class="btn btn-primary">Create a new list</button></a>

  <h3 class="center white">All Lists</h3>

  <div class="panel-group" id="accordion">
    <% @lists.each do |list| %>
      <div class="panel panel-default">
        
          <div class="panel-heading">
            <h4 class="panel-title inline">
              <a href="/lists/<%= list.id %>"><%= list.title %></a>
            </h4>
            ( <%= list.lists_places.where(complete: true).count %>/<%= list.lists_places.count %> completed)
            <div class="panel-buttons">
              <a class="plus-minus-toggler" data-toggle="collapse" data-parent="#accordion" href="#<%= list.id %>">
                <button type="button" class="btn btn-default btn-sm">
                  <span class="glyphicon glyphicon-chevron-down" aria-hidden="true"></span>
                </button>
              </a>
            </div>
          </div>
          
        <div id="<%= list.id %>" class="panel-collapse collapse">
          <div class="panel-body">
            <%= list.description %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>